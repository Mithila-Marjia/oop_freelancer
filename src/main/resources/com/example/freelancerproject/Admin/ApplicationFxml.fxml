<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="472.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.freelancerproject.Admin.ApplicationFxml">
   <children>
      <Label fx:id="reviewLabel" layoutX="134.0" layoutY="28.0" prefHeight="35.0" prefWidth="360.0" text="Review Freelancer Applications">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <ComboBox fx:id="applicationComboBox" layoutX="444.0" layoutY="92.0" prefHeight="45.0" prefWidth="153.0" promptText="application Id" />
      <TableView fx:id="freelancerTableView" layoutX="1.0" layoutY="92.0" prefHeight="379.0" prefWidth="333.0">
        <columns>
          <TableColumn fx:id="applicationidTableColumn" prefWidth="105.0" text="Application ID" />
          <TableColumn fx:id="senderidTableColumn" prefWidth="96.0" text="Sender Id" />
            <TableColumn fx:id="statusTableColumn" prefWidth="131.0" text="Status" />
        </columns>
      </TableView>
      <Label fx:id="applicationDetailsLabel" layoutX="374.0" layoutY="163.0" prefHeight="35.0" prefWidth="175.0" text="Application Details">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextArea fx:id="applicationviewTextArea" layoutX="374.0" layoutY="213.0" prefHeight="96.0" prefWidth="222.0" promptText="application view">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button layoutX="392.0" layoutY="344.0" mnemonicParsing="false" onAction="#approveButton" prefHeight="45.0" prefWidth="75.0" text="Approve">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="491.0" layoutY="344.0" mnemonicParsing="false" onAction="#rejectButton" prefHeight="45.0" prefWidth="68.0" text="Reject">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="applicationidLable" layoutX="342.0" layoutY="106.0" text="Application ID:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button layoutX="499.0" layoutY="410.0" mnemonicParsing="false" onAction="#backButton" prefHeight="45.0" prefWidth="78.0" text="Back">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
