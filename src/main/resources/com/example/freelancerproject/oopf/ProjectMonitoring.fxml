<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="420.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopf.ProjectMonitoringController">
    <children>
        <Label layoutX="90.0" layoutY="40.0" text="Project Monitoring Dashboard" textFill="DARKGREEN">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <Button layoutX="30.0" layoutY="100.0" mnemonicParsing="false" onAction="#viewProjectsOnAction" prefWidth="200.0" text="View Ongoing Projects" textFill="#006400" />
        <Button layoutX="260.0" layoutY="100.0" mnemonicParsing="false" onAction="#trackProgressOnAction" prefWidth="200.0" text="Track Progress" textFill="#006400" />

        <Button layoutX="30.0" layoutY="150.0" mnemonicParsing="false" onAction="#assignTasksOnAction" prefWidth="200.0" text="Assign Tasks" textFill="#006400" />
        <Button layoutX="260.0" layoutY="150.0" mnemonicParsing="false" onAction="#reviewDeadlinesOnAction" prefWidth="200.0" text="Review Deadlines" textFill="#006400" />

        <Button layoutX="30.0" layoutY="200.0" mnemonicParsing="false" onAction="#updateStatusOnAction" prefWidth="200.0" text="Update Project Status" textFill="#006400" />
        <Button layoutX="260.0" layoutY="200.0" mnemonicParsing="false" onAction="#viewReportsOnAction" prefWidth="200.0" text="View Reports" textFill="#006400" />

        <Button layoutX="145.0" layoutY="260.0" mnemonicParsing="false" onAction="#sendRemindersOnAction" prefWidth="210.0" text="Send Reminders" textFill="#006400" />

        <Button layoutX="380.0" layoutY="360.0" mnemonicParsing="false" onAction="#logoutOnAction" text="Logout" textFill="#0e1dbf">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
