<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopf.LongTermCollaborationController">
    <children>
        <!-- Title Label -->
        <Label layoutX="180.0" layoutY="20.0" text="Long Term Collaboration" textFill="DARKBLUE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Table for Long Term Collaborations -->
        <TableView layoutX="50.0" layoutY="80.0" prefWidth="500.0" prefHeight="250.0">
            <!-- Columns for displaying collaboration details -->
            <columns>
                <TableColumn text="Collaborator Name" prefWidth="200.0" />
                <TableColumn text="Collaboration Start Date" prefWidth="150.0" />
                <TableColumn text="Collaboration End Date" prefWidth="150.0" />
            </columns>
        </TableView>

        <!-- Button: View Collaboration Details -->
        <Button layoutX="50.0" layoutY="350.0" mnemonicParsing="false" onAction="#viewCollaborationDetailsOnAction" prefWidth="200.0" text="View Collaboration Details" textFill="DARKRED" />

        <!-- Button: Create New Collaboration -->
        <Button layoutX="250.0" layoutY="350.0" mnemonicParsing="false" onAction="#createNewCollaborationOnAction" prefWidth="200.0" text="Create New Collaboration" textFill="DARKRED" />

        <!-- Button: Logout -->
        <Button layoutX="450.0" layoutY="450.0" mnemonicParsing="false" onAction="#logoutOnAction" text="Logout" textFill="#0e1dbf">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
