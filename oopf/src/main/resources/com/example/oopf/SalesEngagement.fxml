<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.oopf.SalesEngagementController"
      spacing="15" alignment="CENTER" style="-fx-background-color: #f0f4f7;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Sales Engagement" style="-fx-font-size: 24px; -fx-text-fill: #333;" />

    <Button text="Engage Leads" onAction="#engageLeadsOnAction" prefWidth="200"/>
    <Button text="Schedule Meeting" onAction="#scheduleMeetingOnAction" prefWidth="200"/>
    <Button text="Send Follow-Up" onAction="#sendFollowUpOnAction" prefWidth="200"/>
    <Button text="View Engagement Reports" onAction="#viewReportsOnAction" prefWidth="200"/>
    <Button text="Back to Dashboard" onAction="#backToDashboardOnAction" prefWidth="200"/>

</VBox>
